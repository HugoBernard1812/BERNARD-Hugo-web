$sql = 'SELECT * FROM item';
try {
  $stmt = $dbh->prepare($sql);
  $stmt->execute()

  while ($row = $stmt->fetch(PDO::FETCH_ASSOC)){
    print $row ['id'];
    print $row ['liste_id'];
    print $row ['nom'];
    print $row ['descr'];
    print $row ['img'];
    print $row ['url'];
    print $row ['tarif'];
    }
  while ($row = $stmt->fetch(PDO::FETCH_OBJ)){
    print $row->id;
    print $row->liste_id;
    print $row->nom;
    print $row->descr;
    print $row->img;
    print $row->url;
    print $row->tarif;
    }
  foreach($stmt->fetchAll(PDO::FETCH_NUM)as $row){
    print $row[0];
    print $row[1];
    print $row[2];
    print $row[3];
    print $row[4];
    print $row[5];
    print $row[6];
    }
  }catch (PDOEXception $e){
    print $e->getMessage();
  }

?>
